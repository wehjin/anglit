<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ddd"
                tools:context="com.rubyhuntersky.angleedit.app.MainActivity.XmlDocumentFragment"
                tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/elements_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:orientation="vertical">

        <com.rubyhuntersky.angleedit.app.TreeView
            android:id="@+id/treeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actioncolumn"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/background_action_gutter"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/button_add_element"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/action_column_selector"
            android:gravity="center"
            android:text="@string/plus"/>

    </LinearLayout>


</RelativeLayout>
